- distance.NAME    = distance.NAME || 'Distance'
- distance.ADDRESS = distance.ADDRESS || 'address'
- distance.PORT    = distance.PORT || 'port'

doctype html
html
  head
    title= 'Distance'
    link(rel='stylesheet', href='/css/style.css')
    link(href='http://fonts.googleapis.com/css?family=Open+Sans&effect=anaglyph', rel='stylesheet', type='text/css')

  body
    div.container
      block content

    script(src='/socket.io/socket.io.js', type='text/javascript')
    // This one come from node_modules folder
    script(src='/js/lodash.min.js', type='text/javascript')
    script(src='/js/util/errormessage.js', type='text/javascript')
    script(src='/js/util/util.js', type='text/javascript')
    script(type='text/javascript').
      util.setAddress('#{distance.ADDRESS}');
      util.setPort(#{distance.PORT});
    block view-script